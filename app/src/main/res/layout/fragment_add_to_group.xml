<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/gray333">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выберите статус просмотра"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="16dp"/>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:checkedButton="@id/radio_not_watching">

        <RadioButton
            android:id="@+id/radio_not_watching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Не смотрю" />

        <RadioButton
            android:id="@+id/radio_watching"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Смотрю" />

        <RadioButton
            android:id="@+id/radio_planned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="В планах" />

        <RadioButton
            android:id="@+id/radio_watched"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Просмотрено" />

        <RadioButton
            android:id="@+id/radio_paused"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Отложено" />

        <RadioButton
            android:id="@+id/radio_dropped"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Брошено" />

        <RadioButton
            android:id="@+id/radio_scheduled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:buttonTint="@color/radio_selector"
            android:minHeight="48dp"
            android:textSize="18sp"
            android:text="Запланировано" />
    </RadioGroup>

    <Button
        android:id="@+id/button_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Отмена"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_cansel_border"
        android:layout_marginTop="24dp"/>
</LinearLayout>