<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray111"
    android:padding="22dp">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingBottom="16dp">

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/back_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@null"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фильтры"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <!-- Категория -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Категория"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Неважно"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/white" />

            <!-- Жанр -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Жанр"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Неважно"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/white" />

            <!-- Год выпуска -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Год выпуска"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_year"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Неважно"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/white" />

            <!-- Возрастные ограничения -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Возрастные ограничения"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Неважно"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/white" />

            <!-- Статус -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Статус просмотра"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <com.skydoves.powerspinner.PowerSpinnerView
                android:id="@+id/spinner_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_background"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:text="Неважно"
                android:padding="10dp"
                android:layout_marginBottom="20dp"
                app:spinner_arrow_gravity="end"
                app:spinner_arrow_tint="@color/white" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Сбросить"
            android:background="@drawable/rounded_button_cansel_border"
            android:textColor="@color/gray_for_cancel"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/apply_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Применить"
            android:background="@drawable/rounded_button_background"
            android:textColor="@color/black"
            android:layout_marginStart="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>