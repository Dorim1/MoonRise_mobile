<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тема SplashScreen -->
    <style name="Theme.Moonrise.Splash" parent="Theme.SplashScreen">
        <!-- Цвет фона заставки -->
        <item name="windowSplashScreenBackground">@color/colorBackground</item>
        <!-- Иконка, которая будет отображаться -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/rounded_splash_icon</item>
        <!-- Тема, в которую перейдет приложение после заставки -->
        <item name="postSplashScreenTheme">@style/Theme.Moonrise</item>
    </style>

    <style name="Theme.Moonrise" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorBackgroundFloating">@color/colorBackgroundFloating</item>
        <item name="colorOnBackground">@color/colorOnBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <item name="colorErrorContainer">@color/colorErrorContainer</item>

        <!-- Статус-бар -->
        <item name="android:statusBarColor">@color/colorBackground</item>

        <!-- Шрифты -->
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
    </style>
</resources>